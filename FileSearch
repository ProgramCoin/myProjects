using System;
using System.Collections;
using System.Collections.Generic;
using System.Linq;
using System.Threading;
using System.IO;
using System.IO.Compression;
using System.IO.MemoryMappedFiles;
using System.Text;
using System.Text.Encodings;


namespace fileSearch
{
    public class Program
    {
        public static void Main(string[] args)
        {

            try
            {

                string[] getDrive = Directory.GetLogicalDrives();


                foreach (string drives in getDrive)
                {
                
                    Console.WriteLine("Searching under " + drives + " drive");

                    Console.WriteLine();

                    Console.WriteLine("Enter a folder name ");
                    Console.WriteLine("Make sure it is typed correctly:");

                    string readInput = Console.ReadLine();

                    string[] getFolder = Directory.GetDirectories(string.Concat(drives, readInput));

                    if (getFolder != null)
                    {
                    
                        foreach (string folder in getFolder)
                        {
                            Console.WriteLine(folder);

                        }

                        foreach(string folder in getFolder)
                        {
                        
                            Console.WriteLine("Do you want to search the files in " + folder + " ?");
                            Console.WriteLine("Y for yes" + "        " + " N for no");
                            Console.WriteLine("Hit Enter to skip this folder: ");

                            string readFiles = Console.ReadLine();

                            if (readFiles == "Y" || readFiles == "y")
                            {

                                string[] files = Directory.GetDirectories(string.Concat(folder, getFolder));

                                foreach(string file in files)
                                {
                                    Console.WriteLine(file);
                                }
                            
                                ConsoleKeyInfo readKey = Console.ReadKey();
                            
                                while (readKey.Key == ConsoleKey.Enter)
                                {

                                    Console.WriteLine(files == null);
                                
                                }

                            }

                            else if (readFiles == "N" || readFiles == "n")
                            {
                                Environment.Exit(0);
                            }



                        }

                    }
                    

                }
            }
            
           
            catch (Exception e)
            {

                Console.WriteLine(e.Message);

            }
            

        }

    }
}
